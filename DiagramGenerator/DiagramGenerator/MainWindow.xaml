<Window x:Class="DiagramGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Draw diagram" Height="400" Width="575" Name="mainWindow">
    <Grid>
        <DockPanel>
            <Menu x:Name="mainMenu" DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="Open"/>
                    <MenuItem Header="Save"/>
                    <Separator/>
                    <MenuItem Header="Close"/>
                </MenuItem>
                <MenuItem Header="Add">
                    <MenuItem Header="Add Item" />
                    <MenuItem Header="Add Coupon" />
                </MenuItem>
                <MenuItem Header="Remove" />
            </Menu>
            <StackPanel  Width="433" Orientation="Horizontal" Background="WhiteSmoke" DockPanel.Dock="Right" HorizontalAlignment="Left">
                <Canvas Name="drawCanvas" Background="White" MouseDown="drawCanvas_MouseDown" Width="431">
                    <Polyline Name="polyline" Stroke="Black" Visibility="Collapsed"/>
                    <Polygon Name="polygon" Stroke="Black" Visibility="Collapsed"/>
                    <Polygon Name="filledPolygon" Fill="DarkBlue" Visibility="Collapsed"/>
                </Canvas>
            </StackPanel>
            <StackPanel  Width="129" Orientation="Horizontal" Background="WhiteSmoke" DockPanel.Dock="Left" HorizontalAlignment="Left">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <GroupBox Grid.Row="0" Header="Select Type" Margin="10,10,10,10">
                        <StackPanel>
                            <RadioButton Name="lineRadio1" Content="Polyline" Margin="5" Checked="lineRadio_Checked"/>
                            <RadioButton Name="polygonRadio1" Content="Polygon" Margin="5" Checked="polygonRadio_Checked"/>
                            <RadioButton Name="filledPolygonRadio1" Content="Filled Polygon" Margin="5" Checked="filledPolygonRadio_Checked"/>
                            <Button Name="clearButton1" Content="Clear" Click="clearButton_Click" Margin="5"/>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Grid.Row="1" Header="Select Type" Margin="10,10,10,10">
                        <StackPanel>
                            <RadioButton Name="lineRadio" Content="Polyline" Margin="5" Checked="lineRadio_Checked"/>
                            <RadioButton Name="polygonRadio" Content="Polygon" Margin="5" Checked="polygonRadio_Checked"/>
                            <RadioButton Name="filledPolygonRadio" Content="Filled Polygon" Margin="5" Checked="filledPolygonRadio_Checked"/>
                            <Button Name="clearButton" Content="Clear" Click="clearButton_Click" Margin="5"/>
                        </StackPanel>
                    </GroupBox>

                </Grid>

            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
